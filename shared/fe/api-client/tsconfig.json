{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2022",
    "jsx": "react",
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/generated/**/*"],
  "lib": ["dom", "esnext"]
}
