{
  "name": "mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "private": true,
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "build-prepare": "bun install -g eas-cli && eas whoami >/dev/null 2>&1 || eas login",
    "build-ios": "NODE_ENV=production eas build --profile production --local --clear-cache --platform ios",
    "build-android": "NODE_ENV=production eas build --profile production --local --clear-cache --platform android",
    "expo-update": "bun expo install expo@latest && bunx expo install --fix",
    "lint": "biome check --write --unsafe --max-diagnostics none",
    "install-package": "bunx expo install"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@react-native-async-storage/async-storage": "2.2.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "expo": "^54.0.25",
    "expo-constants": "~18.0.10",
    "expo-linking": "~8.0.9",
    "expo-localization": "~17.0.7",
    "expo-router": "~6.0.15",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "~6.0.8",
    "i18next": "^25.6.0",
    "nativewind": "^5.0.0-preview.2",
    "react": "19.1.0",
    "react-hook-form": "^7.65.0",
    "react-i18next": "^16.0.1",
    "react-native": "0.81.5",
    "react-native-css": "^3.0.1",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-worklets": "0.5.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.14",
    "@types/react": "~19.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "~5.9.2"
  },
  "resolutions": {
    "lightningcss": "1.30.1"
  }
}
